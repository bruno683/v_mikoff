{% extends 'base.html.twig' %}

{% block title %}Les Patients que je reçois{% endblock %}
    
{% block body %}
    <div class="container">
    <h1>Les patients que je reçois</h1>
    {% if pages %}
        {% for page in pages %}
            <div class="page-container">
            <div class="text-block">
                <h1>{{page.title}}</h1>
                <p>{{page.content|raw}}</p>
            </div>
            {% if page.image %}
                <img src="{{asset('/upload/images/pages/' ~ page.image)}}" class="illustration" alt="Image de l'article">
            {% endif %}
        </div>
        <hr>
            
        {% endfor %}
        {% else %}
                <h1>pas de présentations disponibles</h1>
    {% endif %}
    </div>
{% endblock %}
