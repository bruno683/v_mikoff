{% extends 'base.html.twig' %}

{% block title %}Les Patients que je reçois{% endblock %}
    
{% block body %}
    <div class="container">
    <h1>Les patients que je reçois</h1>
    {% if pages %}
        {% for page in pages %}
            <h1>{{page.title}}</h1>
            <p>{{page.content}}</p>
            <img src="upload/images/pages/ ~ page.image" alt="image de l'article">
            <hr>
            
        {% endfor %}
        {% else %}
                <h1>pas de présentations disponibles</h1>
    {% endif %}
    </div>
{% endblock %}
