{% extends 'base.html.twig' %}

{% block title %}Les Patients que je reçois
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Les patients que je reçois</h1>
		{% if pages %}
			{% for page in pages %}
				<div class="page-container">
					<div class="text-block">
						<h1>{{page.title}}</h1>
						<div class="image-flottantes">
							<img src="{{asset('/upload/images/pages/' ~ page.image)}}" class="illustration" alt="">
							<p  class="article-content">{{page.content|raw}}</p>
						</div>

					</div>
					{# {% if page.image is not null %}{% endif %} #}
				</div>
				<hr>

			{% endfor %}
		{% else %}
			<h1>pas de présentations disponibles</h1>
		{% endif %}
	</div>
{% endblock %}
